{
  "manifest_version": 2,
  "name": "Amazon Book Research Helper",
  "description": "Writing to market? This extension shows the most important information about a book right at the top of the page.",
  "version": "1.0.7.1",
  "author": "Terminal Publishing",
  "icons": {
    "128": "assets/icon128.png",
    "96": "assets/icon96.png",
    "48": "assets/icon48.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.co.uk/*"
      ],
      "run_at": "document_end",
      "css": [
        "build/main.css"
      ],
      "js": [
        "build/main.js"
      ]
    },
    {
      "all_frames": true,
      "matches": [ "https://kindlepreneur.com/amazon-kdp-sales-rank-calculator/*" ],
      "js": [ "build/kp.js" ]
    },
    {
      "all_frames": true,
      "matches": [ "http://www.tckpublishing.com/amazon-book-sales-calculator/*" ],
      "js": [ "build/tck.js" ]
    }
  ],
  "permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.co.uk/*",
    "http://www.tckpublishing.com/amazon-book-sales-calculator/*",
    "https://kindlepreneur.com/amazon-kdp-sales-rank-calculator/*"
  ]
}
