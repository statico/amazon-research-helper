{
  "manifest_version": 2,
  "name": "Amazon Book Research Helper",
  "description": "Writing to market? This extension shows the most important information about a book right at the top of the page.",
  "version": "1.0.2",
  "author": "Terminal Publishing",
  "icons": { "128": "assets/icon.png" },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [ "*://*.amazon.com/*" ],
      "run_at": "document_end",
      "css": [
        "build/main.css"
      ],
      "js": [
        "third-party/jquery.js",
        "third-party/moment.min.js",
        "build/main.js"
      ]
    }
  ],
  "permissions": [
    "*://*.amazon.com/*"
  ]
}
